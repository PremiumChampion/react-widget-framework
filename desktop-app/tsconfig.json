{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ES2019",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"],
      "fs": ["node_modules/fs"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
